<!DOCTYPE html>
<html>
  <head>
    <title>Shoe Store</title>
  </head>
  <body>
    <div class="container">

      <h1>{{ brand.getBrandName }}</h1>

      {% if stores is not empty %}
      <p>Tese stores have the shoes:</p>
      <ul>
      {% for store in stores %}
      <li>{{ store.getStoreName }}</li>
      <ul>
        <li>Address: {{ store.getAddress }}</li>
      </ul>
      {% endfor %}
      </ul>
      {% endif %}

      <h4>Add a Store</h4>

      <form action='/add_stores' method='post' required>
        <input id="brand_id" name="brand_id" type="hidden" value="{{ brand.getId }}">
        <label for='store_id'>Which store?</label>
        <select id='store_id' name='store_id' type='text'>
        {% for store in all_stores %}
        <option value="{{ store.getId }}"> {{ store.getStoreName }} </option>
        {% endfor %}
        </select>
        <button type="submit">Add store</button>
      </form>
      <p><a href="/brands/{{ brand.getId }}/edit">Chnage the brand</a></p>
      <p><a href='/'>Home</a></p>
    </div>
  </body>
</html>
